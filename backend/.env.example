# API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_ORIGINS=chrome-extension://*,http://localhost:*,https://mp.weixin.qq.com

# AI Model Settings
OPENAI_BASE_URL=  # 留空使用官方API，或设置为自定义endpoint如: https://api.openai-proxy.com/v1
DEFAULT_MODEL=gpt-4o-mini
MAX_TOKENS=2000
TEMPERATURE=0.7
REQUEST_TIMEOUT=180  # API请求超时时间（秒）
MAX_CONTENT_LENGTH=15000  # 最大内容长度（字符），超过将分段处理