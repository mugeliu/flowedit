{
  "id": "default",
  "name": "墨韵绿境主题",
  "description": "融合东方美学与现代设计的高端主题，专为中文内容和微信公众号精心打造",
  "category": "现代风格",
  "author": "FlowEdit Team",
  "version": "3.0.0",
  "inlineStyles": {
    "strong": "font-weight: 600; color: #047857; background: rgba(16, 185, 129, 0.08); padding: 0.1em 0.25em; border-radius: 0.25em;",
    "b": "font-weight: 600; color: #047857; background: rgba(16, 185, 129, 0.08); padding: 0.1em 0.25em; border-radius: 0.25em;",
    "em": "font-style: italic; color: #059669; font-weight: 500; background: rgba(16, 185, 129, 0.1); padding: 0.05em 0.2em;",
    "i": "font-style: italic; color: #059669; font-weight: 500; background: rgba(16, 185, 129, 0.1); padding: 0.05em 0.2em;",
    "u": "text-decoration: underline; text-decoration-color: #10b981; text-underline-offset: 0.2em; text-decoration-thickness: 0.1em;",
    "code": "font-family: 'SF Mono', Menlo, Monaco, Consolas, monospace; font-size: 0.85em; background: #f0fdf4; color: #15803d; padding: 0.2em 0.5em; border-radius: 0.375em; border: 1px solid #bbf7d0; font-weight: 500;",
    "mark": "background: #ecfdf5; color: #065f46; padding: 0.15em 0.3em; border-radius: 0.3em; box-shadow: 0 1px 2px rgba(16, 185, 129, 0.1); font-weight: 500;",
    "a": "color: #047857; text-decoration: none; font-weight: 500; border-bottom: 1px solid rgba(16, 185, 129, 0.4); background: rgba(16, 185, 129, 0.05); padding: 0.05em 0.1em;",
    "sup": "color: #6b7280; font-size: 0.7em; font-weight: 500; vertical-align: super;"
  },
  "globalStyles": {
    "container": "<section style='max-width: 100%; margin: 0 auto; padding: 3em 2em; font-size: 17px; line-height: 1.8; color: #1f2937; font-family: -apple-system, BlinkMacSystemFont, \"PingFang SC\", \"Hiragino Sans GB\", \"Microsoft YaHei\", Arial, sans-serif; background: #ffffff; box-sizing: border-box;'>{{content}}</section>",
    "references": "<section style='margin-top: 4em;'><section style='padding: 2em; background: rgba(236, 253, 245, 0.6); border: 1px solid rgba(16, 185, 129, 0.15); border-radius: 1em; font-family: inherit; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.03);'><section style='display: flex; align-items: center; margin-bottom: 1.5em;'><span style='width: 0.5em; height: 0.5em; background: #10b981; border-radius: 50%; margin-right: 0.75em;'></span><h4 style='margin: 0; font-size: 1.1em; font-weight: 600; color: #064e3b;'>参考资料</h4></section><section style='font-size: 0.9em; line-height: 1.7; color: #374151;'>{{links}}</section></section></section>"
  },
  "blocks": {
    "paragraph": "<p style='font-size: 1em; color: #374151; margin: 0 0 1.6em 0; line-height: 1.8; font-family: inherit; text-align: justify; font-weight: 400;'>{{text}}</p>",
    "header": {
      "h1": "<section style='margin: 3.5em 0 2.5em 0; text-align: center;'><section style='display: inline-block; background: #059669; border-radius: 2em; box-shadow: 0 8px 25px rgba(16, 185, 129, 0.25); padding: 0.3em;'><h1 style='font-size: 2.2em; font-weight: 700; line-height: 1.2; color: #ffffff; font-family: inherit; margin: 0; padding: 0.4em 1.2em; background: rgba(255, 255, 255, 0.1); border-radius: 1.7em;'>{{text}}</h1></section></section>",
      "h2": "<section style='margin: 2.5em 0 1.8em 0;'><section style='display: flex; align-items: center;'><span style='width: 0.4em; height: 2.5em; background: #10b981; border-radius: 0.2em; margin-right: 1.2em;'></span><h2 style='font-size: 1.8em; font-weight: 650; line-height: 1.3; color: #047857; font-family: inherit; margin: 0;'>{{text}}</h2></section><section style='margin-top: 0.8em; margin-left: 1.6em; width: 3em; height: 0.15em; background: #34d399; border-radius: 0.075em; opacity: 0.8;'></section></section>",
      "h3": "<section style='margin: 2em 0 1.2em 0;'><section style='display: flex; align-items: flex-start;'><section style='margin-right: 1em; margin-top: 0.3em; display: flex; flex-direction: column; align-items: center;'><span style='width: 0.8em; height: 0.8em; background: #10b981; border-radius: 50%; margin-bottom: 0.3em;'></span><span style='width: 0.15em; height: 1.2em; background: rgba(16, 185, 129, 0.3);'></span></section><h3 style='font-size: 1.4em; font-weight: 600; line-height: 1.4; color: #1f2937; font-family: inherit; margin: 0;'>{{text}}</h3></section></section>"
    },
    "quote": {
      "template": "<section style='margin: 2em 0;'><section style='padding: 2em 2.5em 2em 2.5em; background: rgba(240, 253, 250, 0.8); border-left: 0.4em solid #10b981; border-radius: 0 1em 1em 0; font-family: inherit; box-shadow: 0 4px 15px rgba(16, 185, 129, 0.08);'><section style='display: flex; align-items: flex-start;'><span style='font-size: 2.5em; color: rgba(16, 185, 129, 0.3); font-family: serif; line-height: 0.8; margin-right: 0.3em; margin-top: -0.2em;'>&ldquo;</span><section style='flex: 1;'><p style='margin: 0 0 1em 0; color: #374151; font-style: italic; font-size: 1.1em; line-height: 1.7; font-weight: 400;'>{{text}}</p>{{?caption}}</section></section></section></section>",
      "optional": {
        "caption": "<p style='text-align: right; font-size: 0.9em; color: #6b7280; font-style: normal; margin: 0.8em 0 0 0; font-weight: 500;'>— {{value}}</p>"
      }
    },
    "delimiter": "<section style='display: flex; align-items: center; justify-content: center; margin: 3em 0;'><section style='display: flex; align-items: center;'><span style='width: 0.6em; height: 0.6em; background: #10b981; border-radius: 50%; margin: 0 0.8em;'></span><span style='width: 0.4em; height: 0.4em; background: #34d399; border-radius: 50%; margin: 0 0.6em;'></span><span style='width: 0.6em; height: 0.6em; background: #10b981; border-radius: 50%; margin: 0 0.8em;'></span></section></section>",
    "image": {
      "template": "<section style='margin: 2.5em 0; text-align: center;'><section style='display: inline-block; border-radius: 1em; overflow: hidden; box-shadow: 0 8px 25px rgba(0, 0, 0, 0.12); background: #ffffff; padding: 0.5em;'><img src='{{url}}' alt='{{alt}}' style='max-width: 100%; display: block; border-radius: 0.5em;' /></section>{{?caption}}</section>",
      "optional": {
        "caption": "<p style='margin: 1em 0 0 0; font-size: 0.9em; color: #6b7280; font-style: italic; line-height: 1.6; text-align: center; background: rgba(16, 185, 129, 0.05); padding: 0.5em 1em; border-radius: 0.5em; display: inline-block;'>{{value}}</p>"
      }
    },
    "code": "<section style='margin: 2em 0; background: #f8fafc; border: 1px solid #e1e7ef; border-radius: 1em; overflow: hidden; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);'><section style='background: #f1f5f9; padding: 1em 1.5em; border-bottom: 1px solid #e1e7ef; display: flex; align-items: center; justify-content: space-between;'><section style='display: flex; align-items: center;'><span style='width: 0.8em; height: 0.8em; background: #ef4444; border-radius: 50%; margin-right: 0.6em;'></span><span style='width: 0.8em; height: 0.8em; background: #f59e0b; border-radius: 50%; margin-right: 0.6em;'></span><span style='width: 0.8em; height: 0.8em; background: #10b981; border-radius: 50%;'></span></section><span style='font-size: 0.75em; color: #64748b; font-weight: 500;'>CODE</span></section><section style='padding: 1.8em; font-family: \"SF Mono\", Menlo, Monaco, Consolas, monospace; font-size: 0.9em; line-height: 1.6; color: #1e293b; background: #ffffff; overflow-x: auto;'><span style='font-family: inherit; background: transparent; color: inherit; font-weight: 400;'>{{code}}</span></section></section>",
    "List": {
      "ordered": {
        "wrapper": "<ol style='margin: 1.5em 0; padding-left: 0; list-style: none;'>{{items}}</ol>",
        "item": "<li style='padding: 0.8em 0; line-height: 1.8; color: #374151; display: flex; align-items: flex-start;'><section style='margin-right: 1.2em; margin-top: 0.1em; flex-shrink: 0;'><span style='width: 1.8em; height: 1.8em; background: #10b981; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.8em; font-weight: 600; color: white; box-shadow: 0 2px 8px rgba(16, 185, 129, 0.25);'>{{index}}</span></section><span style='flex: 1; margin-top: 0.1em;'>{{content}}</span></li>"
      },
      "unordered": {
        "wrapper": "<ul style='margin: 1.5em 0; padding-left: 0; list-style: none;'>{{items}}</ul>",
        "item": "<li style='padding: 0.8em 0; line-height: 1.8; color: #374151; display: flex; align-items: flex-start;'><section style='margin-right: 1.2em; margin-top: 0.5em; flex-shrink: 0; text-align: center;'><span style='width: 0.5em; height: 0.5em; background: #10b981; border-radius: 50%; display: inline-block;'></span></section><span style='flex: 1;'>{{content}}</span></li>"
      },
      "checklist": {
        "wrapper": "<ul style='margin: 1.5em 0; padding-left: 0; list-style: none;'>{{items}}</ul>",
        "item": "<li style='padding: 0.8em 0; line-height: 1.8; display: flex; align-items: flex-start; color: #374151;'><section style='margin-right: 1em; margin-top: 0.1em; width: 1.2em; height: 1.2em; border: 2px solid #d1d5db; border-radius: 0.25em; display: flex; align-items: center; justify-content: center; flex-shrink: 0; background: #ffffff;'>{{checkbox}}</section><span style='flex: 1; margin-top: 0.05em;'>{{content}}</span></li>",
        "checked": "<span style='color: #10b981; font-weight: 700; font-size: 0.9em;'>✓</span>",
        "unchecked": ""
      }
    },
    "raw": "{{html}}"
  }
}