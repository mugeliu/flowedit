{
  "theme": "purple-ocean-theme",
  "description": "基于深邃海洋的紫蓝色渐变主题样式模板",
  "inlineStyles": {
    "strong": "font-weight: 700; color: rgb(139, 92, 246);",
    "b": "font-weight: 700; color: rgb(139, 92, 246);",
    "em": "font-style: italic; color: rgb(99, 102, 241); font-weight: 500; letter-spacing: 0.4px;",
    "i": "font-style: italic; color: rgb(99, 102, 241); font-weight: 500; letter-spacing: 0.4px;",
    "u": "text-decoration: underline; text-decoration-color: rgb(124, 58, 237); text-underline-offset: 3px; text-decoration-thickness: 2px;",
    "code": "font-family: 'Consolas', 'Monaco', 'Courier New', monospace; font-size: 0.85em; background: rgba(124, 58, 237, 0.12); color: rgb(68, 26, 158); padding: 0.3em 0.7em; border-radius: 6px; border: 1px solid rgba(124, 58, 237, 0.3); font-weight: 500; letter-spacing: 0.2px;",
    "mark": "background: rgba(168, 85, 247, 0.25); padding: 0.15em 0.5em; border-radius: 4px; border: 1px solid rgba(168, 85, 247, 0.2);",
    "a": "color: rgb(99, 102, 241); text-decoration: underline; text-decoration-color: rgba(99, 102, 241, 0.6); text-underline-offset: 2px; font-weight: 500;",
    "sup": "color: rgba(124, 58, 237, 0.85); font-size: 0.7em; margin-left: 0.2em;"
  },
  "globalStyles": {
    "container": "<section style='box-sizing: border-box; margin: 0px; padding: 0px; font-size: 16px; line-height: 1.35; color: rgb(30, 41, 59); font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, sans-serif; letter-spacing: 1px; background: linear-gradient(135deg, rgba(99, 102, 241, 0.02) 0%, rgba(168, 85, 247, 0.02) 100%); border-left: 3px solid rgba(124, 58, 237, 0.1); padding-left: 1.5em;'>{{content}}</section>",
    "references": "<section style='margin-top: 2.5em; padding: 2em; background: linear-gradient(135deg, rgba(99, 102, 241, 0.06) 0%, rgba(168, 85, 247, 0.04) 100%); border: 2px solid rgba(124, 58, 237, 0.15); border-radius: 16px; font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif; box-shadow: 0 4px 12px rgba(124, 58, 237, 0.08);'><h4 style='margin: 0 0 1.2em 0; font-size: 17px; font-weight: 650; color: rgb(68, 26, 158); text-align: center; padding: 0.5em 0; border-bottom: 3px solid rgba(124, 58, 237, 0.2); letter-spacing: 1px;'>🔗 参考资源</h4><div style='font-size: 14px; line-height: 1.7; color: rgb(51, 65, 85);'>{{links}}</div></section>"
  },
  "blocks": {
    "paragraph": "<p style='font-size: 16px; color: rgb(51, 65, 85); letter-spacing: 0.5px; padding: 0.5em 1em; margin: 0 0 1em 0; line-height: 1.7; font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Helvetica, Arial, sans-serif; text-align: justify; word-break: break-word; border-left: 2px solid rgba(124, 58, 237, 0.1); background: rgba(99, 102, 241, 0.02);'>{{text}}</p>",
    "header": {
      "h1": "<section style='text-align: left; margin: 3em 0 2.5em 0; border-bottom: 4px solid rgba(124, 58, 237, 0.2); padding-bottom: 1em;'><h1 style='display: block; font-size: 32px; font-weight: 800; line-height: 1.2; color: transparent; background: linear-gradient(135deg, #7c3aed 0%, #8b5cf6 50%, #a855f7 100%); background-clip: text; -webkit-background-clip: text; font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif; margin: 0; letter-spacing: 1.2px; text-shadow: 0 1px 2px rgba(124, 58, 237, 0.1);'>{{text}}</h1></section>",
      "h2": "<section style='margin: 2.5em 0 2em 0;'><h2 style='display: flex; align-items: center; font-size: 24px; font-weight: 700; line-height: 1.3; color: #6366f1; font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif; margin: 0; letter-spacing: 0.8px; padding: 1em 0 0.5em 0; border-top: 3px solid rgba(99, 102, 241, 0.3); border-bottom: 1px solid rgba(99, 102, 241, 0.2);'><span style='display: inline-block; width: 12px; height: 12px; background: linear-gradient(45deg, #6366f1, #8b5cf6); border-radius: 3px; margin-right: 1em; box-shadow: 0 2px 4px rgba(99, 102, 241, 0.3);'></span>{{text}}</h2></section>",
      "h3": "<section style='margin: 2em 0 1.5em 0;'><h3 style='display: block; font-size: 20px; font-weight: 600; line-height: 1.4; color: #7c3aed; font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif; margin: 0; letter-spacing: 0.6px; padding: 0.8em 0 0.3em 2em; border-left: 4px solid rgba(124, 58, 237, 0.4); background: linear-gradient(90deg, rgba(124, 58, 237, 0.05) 0%, transparent 30%);'>{{text}}</h3></section>"
    },
    "quote": {
      "template": "<section style='border: 2px solid rgba(99, 102, 241, 0.2); background: linear-gradient(135deg, rgba(99, 102, 241, 0.05) 0%, rgba(168, 85, 247, 0.03) 100%); padding: 1.8em 2.2em; border-radius: 12px; box-shadow: 0 4px 16px rgba(99, 102, 241, 0.1); margin: 1.5em 0; font-family: -apple-system, sans-serif; border-left: 6px solid #6366f1;'><p style='margin: 0 0 1em 0; color: #475569; font-style: italic; font-size: 17px; line-height: 1.7; font-weight: 500; letter-spacing: 0.3px;'>💭 {{text}}</p>{{?caption}}</section>",
      "optional": {
        "caption": "<footer style='text-align: right; font-size: 14px; color: #7c3aed; font-style: italic; margin-top: 1em; font-weight: 500;'>— {{value}}</footer>"
      }
    },
    "delimiter": "<section style='display: flex; justify-content: center; margin: 3em 0; align-items: center;'><span style='flex: 1; height: 2px; background: linear-gradient(90deg, transparent 0%, rgba(124, 58, 237, 0.3) 50%, transparent 100%);'></span><span style='margin: 0 2em; color: #8b5cf6; font-size: 20px;'>✦</span><span style='flex: 1; height: 2px; background: linear-gradient(90deg, transparent 0%, rgba(124, 58, 237, 0.3) 50%, transparent 100%);'></span></section>",
    "image": {
      "template": "<figure style='margin: 1.5em 0; padding: 0; max-width: 100%; text-align: center; background: rgba(99, 102, 241, 0.02); border-radius: 12px; padding: 1em; border: 1px solid rgba(124, 58, 237, 0.1);'><img src='{{url}}' alt='{{alt}}' style='max-width: 100%; border-radius: 8px; box-shadow: 0 4px 12px rgba(124, 58, 237, 0.15);' />{{?caption}}</figure>",
      "optional": {
        "caption": "<figcaption style='margin-top: 1em; font-size: 14px; color: #6366f1; font-style: italic; line-height: 1.5; font-weight: 500;'>📷 {{value}}</figcaption>"
      }
    },
    "code": "<section style='font-family: Menlo, Monaco, monospace; font-size: 13px; line-height: 1.6; margin: 1.5em 0; color: rgb(226, 232, 240); background: linear-gradient(135deg, rgb(30, 27, 75) 0%, rgb(45, 39, 86) 100%); text-align: left; overflow-x: auto; border: 2px solid rgba(124, 58, 237, 0.3); border-radius: 12px; box-shadow: 0 4px 16px rgba(124, 58, 237, 0.2);'><pre style='padding: 0 !important;'><header style='background: rgba(124, 58, 237, 0.2); padding: 0.8em 1.5em; border-bottom: 1px solid rgba(124, 58, 237, 0.3); font-size: 12px; color: #a855f7; font-weight: 600; letter-spacing: 0.5px;'>💻 CODE</header><code style='font-family: Fira Code, Menlo, Operator Mono, Consolas, Monaco, monospace; font-size: 12px; display: block; padding: 1.5em; white-space: pre-wrap; overflow-wrap: break-word;'>{{code}}</code></pre></section>",
    "List": {
      "ordered": {
        "wrapper": "<ol style='list-style: decimal; margin: 1em 0; padding-left: 2em;' class='{{class}}'>{{items}}</ol>",
        "item": "<li style='padding: 0.6em 0; line-height: 1.7; color: #475569; font-weight: 500;'><span style='color: #6366f1;'>{{content}}</span></li>"
      },
      "unordered": {
        "wrapper": "<ul style='list-style: none; margin: 1em 0; padding-left: 0;' class='{{class}}'>{{items}}</ul>",
        "item": "<li style='padding: 0.8em 0; line-height: 1.7; display: flex; align-items: flex-start;'><span style='display: inline-flex; align-items: center; justify-content: center; width: 8px; height: 8px; background: linear-gradient(135deg, #8b5cf6, #a855f7); border-radius: 50%; margin-right: 1em; margin-top: 0.6em; flex-shrink: 0;'></span><span style='color: #475569;'>{{content}}</span></li>"
      },
      "checklist": {
        "wrapper": "<ul style='list-style: none; margin: 1em 0; padding-left: 0;' class='{{class}}'>{{items}}</ul>",
        "item": "<li style='padding: 0.8em 0; line-height: 1.7; display: flex; align-items: flex-start;'><span style='margin-right: 1em; margin-top: 0.1em; font-size: 16px;'>{{checkbox}}</span><span style='color: #475569;'>{{content}}</span></li>",
        "checked": "🟣",
        "unchecked": "⭕"
      }
    },
    "raw": "{{html}}"
  },
  "usage": {
    "description": "此模板采用深邃海洋的紫蓝色渐变主题，营造科技感和未来感",
    "variables": {
      "{{text}}": "文本内容",
      "{{level}}": "标题级别 (1-6)",
      "{{url}}": "图片链接",
      "{{caption}}": "图片说明",
      "{{code}}": "代码内容",
      "{{items}}": "列表项内容",
      "{{content}}": "列表项文本",
      "{{html}}": "原始HTML内容"
    },
    "notes": [
      "基于紫蓝色渐变配色方案，营造深邃海洋般的视觉体验",
      "采用渐变文字、几何装饰元素和现代化边框设计",
      "标题使用不同的视觉层次：H1渐变文字、H2几何标记、H3左边框",
      "列表使用圆形渐变标记替代传统符号",
      "代码块采用深色主题配合紫色边框",
      "引用块使用双边框和渐变背景设计"
    ]
  }
}