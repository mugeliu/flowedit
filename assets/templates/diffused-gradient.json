{
  "id": "diffused-gradient",
  "name": "弥散光渐变主题",
  "description": "梦幻柔和的弥散光效果，营造温暖舒适的阅读氛围，充满现代感的光影美学",
  "category": "光影美学",
  "author": "FlowEdit Team",
  "version": "1.0.0",
  "inlineStyles": {
    "strong": "font-weight: 700; color: #1e293b; background: linear-gradient(135deg, rgba(168, 85, 247, 0.15) 0%, rgba(236, 72, 153, 0.15) 50%, rgba(251, 146, 60, 0.15) 100%); padding: 0.2em 0.5em; border-radius: 12px; box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);",
    "b": "font-weight: 700; color: #1e293b; background: linear-gradient(135deg, rgba(168, 85, 247, 0.15) 0%, rgba(236, 72, 153, 0.15) 50%, rgba(251, 146, 60, 0.15) 100%); padding: 0.2em 0.5em; border-radius: 12px; box-shadow: 0 0 20px rgba(168, 85, 247, 0.2);",
    "em": "font-style: italic; color: #475569; font-weight: 600; background: linear-gradient(120deg, rgba(59, 130, 246, 0.12) 0%, rgba(147, 51, 234, 0.12) 100%); padding: 0.15em 0.4em; border-radius: 10px; box-shadow: 0 0 15px rgba(59, 130, 246, 0.15);",
    "i": "font-style: italic; color: #475569; font-weight: 600; background: linear-gradient(120deg, rgba(59, 130, 246, 0.12) 0%, rgba(147, 51, 234, 0.12) 100%); padding: 0.15em 0.4em; border-radius: 10px; box-shadow: 0 0 15px rgba(59, 130, 246, 0.15);",
    "u": "text-decoration: none; color: #1e293b; background: linear-gradient(90deg, rgba(168, 85, 247, 0.8) 0%, rgba(236, 72, 153, 0.8) 50%, rgba(251, 146, 60, 0.8) 100%); background-size: 100% 0.12em; background-position: 0 88%; background-repeat: no-repeat; padding-bottom: 0.1em; box-shadow: 0 0 8px rgba(168, 85, 247, 0.3);",
    "code": "font-family: 'SF Mono', 'Monaco', 'Menlo', monospace; font-size: 0.9em; background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.95) 100%); color: #e2e8f0; padding: 0.3em 0.7em; border-radius: 8px; font-weight: 500; box-shadow: 0 0 25px rgba(59, 130, 246, 0.2), inset 0 0 10px rgba(168, 85, 247, 0.1);",
    "mark": "background: linear-gradient(135deg, rgba(251, 146, 60, 0.3) 0%, rgba(251, 191, 36, 0.3) 100%); color: #1e293b; padding: 0.2em 0.4em; border-radius: 8px; font-weight: 600; box-shadow: 0 0 15px rgba(251, 146, 60, 0.4);",
    "a": "color: #3b82f6; text-decoration: none; font-weight: 600; background: linear-gradient(135deg, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.1) 100%); padding: 0.1em 0.3em; border-radius: 8px; box-shadow: 0 0 12px rgba(59, 130, 246, 0.2);",
    "sup": "color: #64748b; font-size: 0.75em; font-weight: 600; vertical-align: super; background: linear-gradient(135deg, rgba(148, 163, 184, 0.2) 0%, rgba(203, 213, 225, 0.2) 100%); padding: 0.15em 0.3em; border-radius: 6px; box-shadow: 0 0 8px rgba(148, 163, 184, 0.3);"
  },
  "globalStyles": {
    "container": "<section style='max-width: 100%; margin: 0 auto; padding: 1.6em 1.2em; font-size: 16px; line-height: 1.7; color: #1e293b; font-family: -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif; background: linear-gradient(135deg, #f8fafc 0%, #ffffff 25%, #f1f5f9 50%, #ffffff 75%, #f8fafc 100%); position: relative; overflow: hidden;'><span style='position: absolute; top: -30px; left: -30px; width: 120px; height: 120px; background: radial-gradient(circle, rgba(168, 85, 247, 0.06) 0%, rgba(168, 85, 247, 0.015) 40%, transparent 70%); border-radius: 50%; pointer-events: none;'></span><span style='position: absolute; bottom: -50px; right: -50px; width: 180px; height: 180px; background: radial-gradient(circle, rgba(236, 72, 153, 0.04) 0%, rgba(236, 72, 153, 0.01) 35%, transparent 65%); border-radius: 50%; pointer-events: none;'></span><span style='position: absolute; top: 25%; left: 65%; width: 100px; height: 100px; background: radial-gradient(circle, rgba(59, 130, 246, 0.03) 0%, rgba(59, 130, 246, 0.008) 45%, transparent 75%); border-radius: 50%; pointer-events: none;'></span>{{content}}</section>",
    "references": "<section style='margin-top: 2.3em; padding: 1.6em; background: linear-gradient(135deg, rgba(255, 255, 255, 0.85) 0%, rgba(248, 250, 252, 0.9) 100%); border-radius: 20px; font-family: inherit; position: relative; overflow: hidden; box-shadow: 0 0 30px rgba(59, 130, 246, 0.06), 0 6px 24px rgba(0, 0, 0, 0.03);'><span style='position: absolute; top: -20px; right: -20px; width: 80px; height: 80px; background: radial-gradient(circle, rgba(168, 85, 247, 0.08) 0%, rgba(168, 85, 247, 0.015) 50%, transparent 80%); border-radius: 50%; pointer-events: none;'></span><section style='display: flex; align-items: center; margin-bottom: 1.1em; position: relative; z-index: 1;'><span style='width: 1em; height: 1em; background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%); border-radius: 50%; margin-right: 0.8em; box-shadow: 0 0 15px rgba(59, 130, 246, 0.35);'></span><h4 style='margin: 0; font-size: 1.1em; font-weight: 700; color: #1e293b; background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent;'>参考资料</h4></section><section style='font-size: 0.9em; line-height: 1.6; color: #475569; position: relative; z-index: 1;'>{{links}}</section></section>"
  },
  "blocks": {
    "paragraph": "<p style='font-size: 1em; color: #334155; margin: 0 0 1.3em 0; line-height: 1.8; font-family: inherit; text-align: left; font-weight: 400; position: relative;'>{{text}}</p>",
    "header": {
      "h1": "<section style='margin: 1.8em 0 1.4em 0; text-align: center; position: relative;'><span style='position: absolute; top: -20px; left: 50%; width: 80px; height: 80px; background: radial-gradient(circle, rgba(168, 85, 247, 0.12) 0%, rgba(236, 72, 153, 0.06) 35%, transparent 65%); border-radius: 50%; margin-left: -40px; pointer-events: none;'></span><h1 style='font-size: 1.4em; font-weight: 800; line-height: 1.1; background: linear-gradient(135deg, #1e293b 0%, #475569 100%); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-family: inherit; margin: 0; padding: 0.9em 1.4em; background-color: rgba(255, 255, 255, 0.8); border-radius: 20px; box-shadow: 0 0 35px rgba(168, 85, 247, 0.12), 0 8px 25px rgba(0, 0, 0, 0.04); position: relative; z-index: 1; backdrop-filter: blur(15px);'>{{text}}</h1></section>",
      "h2": "<section style='margin: 1.4em 0 1em 0; position: relative;'><span style='position: absolute; left: -14px; top: 50%; width: 40px; height: 40px; background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.05) 45%, transparent 75%); border-radius: 50%; margin-top: -20px; pointer-events: none;'></span><h2 style='font-size: 1.2em; font-weight: 700; line-height: 1.2; background: linear-gradient(135deg, #1e293b 0%, #3b82f6 100%); background-clip: text; -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-family: inherit; margin: 0; padding: 0.6em 1.2em; background-color: rgba(255, 255, 255, 0.6); border-radius: 16px; position: relative; z-index: 1; box-shadow: 0 0 25px rgba(59, 130, 246, 0.08), 0 5px 15px rgba(0, 0, 0, 0.025);'>{{text}}</h2></section>",
      "h3": "<section style='margin: 1.2em 0 0.7em 0; position: relative;'><span style='position: absolute; right: -10px; top: -10px; width: 28px; height: 28px; background: radial-gradient(circle, rgba(251, 146, 60, 0.15) 0%, rgba(251, 191, 36, 0.08) 50%, transparent 80%); border-radius: 50%; pointer-events: none;'></span><h3 style='font-size: 1.05em; font-weight: 650; line-height: 1.25; color: #1e293b; font-family: inherit; margin: 0; padding: 0.6em 1em; background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(248, 250, 252, 0.9) 100%); border-radius: 12px; position: relative; z-index: 1; box-shadow: 0 0 20px rgba(168, 85, 247, 0.06), 0 4px 12px rgba(0, 0, 0, 0.015);'>{{text}}</h3></section>"
    },
    "quote": {
      "template": "<section style='margin: 2.1em 0; position: relative;'><span style='position: absolute; top: -20px; left: -20px; width: 70px; height: 70px; background: radial-gradient(circle, rgba(168, 85, 247, 0.06) 0%, rgba(236, 72, 153, 0.03) 40%, transparent 70%); border-radius: 50%; pointer-events: none;'></span><span style='position: absolute; bottom: -15px; right: -15px; width: 55px; height: 55px; background: radial-gradient(circle, rgba(59, 130, 246, 0.05) 0%, rgba(147, 51, 234, 0.025) 45%, transparent 75%); border-radius: 50%; pointer-events: none;'></span><section style='padding: 2em; background: linear-gradient(135deg, rgba(255, 255, 255, 0.85) 0%, rgba(248, 250, 252, 0.9) 100%); border-radius: 22px; font-family: inherit; position: relative; z-index: 1; overflow: hidden; box-shadow: 0 0 40px rgba(168, 85, 247, 0.08), 0 10px 28px rgba(0, 0, 0, 0.03); backdrop-filter: blur(15px);'><p style='margin: 0 0 0.9em 0; color: #334155; font-style: italic; font-size: 0.95em; line-height: 1.7; font-weight: 500; text-align: center; position: relative;'>{{text}}</p>{{?caption}}</section></section>",
      "optional": {
        "caption": "<p style='text-align: center; font-size: 0.95em; color: #64748b; font-style: normal; margin: 1em 0 0 0; font-weight: 600; position: relative;'>— {{value}}</p>"
      }
    },
    "delimiter": "<section style='display: flex; align-items: center; justify-content: center; margin: 2.3em 0; position: relative;'><span style='position: absolute; left: 25%; width: 30px; height: 30px; background: radial-gradient(circle, rgba(168, 85, 247, 0.12) 0%, rgba(168, 85, 247, 0.025) 60%, transparent 90%); border-radius: 50%; pointer-events: none;'></span><span style='position: absolute; right: 30%; width: 25px; height: 25px; background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0.015) 55%, transparent 85%); border-radius: 50%; pointer-events: none;'></span><span style='width: 4em; height: 0.12em; background: linear-gradient(90deg, transparent 0%, rgba(203, 213, 225, 0.7) 20%, rgba(148, 163, 184, 0.8) 50%, rgba(203, 213, 225, 0.7) 80%, transparent 100%); border-radius: 0.06em; margin: 0 1.2em; box-shadow: 0 0 6px rgba(148, 163, 184, 0.25);'></span><span style='width: 1.2em; height: 1.2em; background: radial-gradient(circle, rgba(251, 146, 60, 0.7) 0%, rgba(251, 191, 36, 0.5) 60%, transparent 90%); border-radius: 50%; margin: 0 0.6em; box-shadow: 0 0 15px rgba(251, 146, 60, 0.35);'></span><span style='width: 4em; height: 0.12em; background: linear-gradient(90deg, transparent 0%, rgba(203, 213, 225, 0.7) 20%, rgba(148, 163, 184, 0.8) 50%, rgba(203, 213, 225, 0.7) 80%, transparent 100%); border-radius: 0.06em; margin: 0 1.2em; box-shadow: 0 0 6px rgba(148, 163, 184, 0.25);'></span></section>",
    "image": {
      "template": "<section style='margin: 2.4em 0; text-align: center; position: relative;'><span style='position: absolute; top: -25px; left: 25%; width: 60px; height: 60px; background: radial-gradient(circle, rgba(236, 72, 153, 0.08) 0%, rgba(236, 72, 153, 0.015) 45%, transparent 75%); border-radius: 50%; pointer-events: none;'></span><section style='display: inline-block; border-radius: 20px; overflow: hidden; box-shadow: 0 0 45px rgba(168, 85, 247, 0.12), 0 15px 40px rgba(0, 0, 0, 0.06); background: linear-gradient(135deg, rgba(255, 255, 255, 0.85) 0%, rgba(248, 250, 252, 0.9) 100%); padding: 0.8em; position: relative; z-index: 1; backdrop-filter: blur(15px);'><section style='border-radius: 12px; overflow: hidden; position: relative;'><img src='{{url}}' alt='{{alt}}' style='max-width: 100%; display: block;' /></section></section>{{?caption}}</section>",
      "optional": {
        "caption": "<p style='margin: 1.5em 0 0 0; font-size: 0.9em; color: #64748b; font-style: italic; line-height: 1.5; text-align: center; background: linear-gradient(135deg, rgba(255, 255, 255, 0.75) 0%, rgba(248, 250, 252, 0.85) 100%); padding: 0.6em 1.2em; border-radius: 16px; display: inline-block; font-weight: 500; box-shadow: 0 0 20px rgba(148, 163, 184, 0.12);'>{{value}}</p>"
      }
    },
    "code": "<section style='margin: 2.1em 0; position: relative; overflow: hidden;'><span style='position: absolute; top: -18px; right: -18px; width: 55px; height: 55px; background: radial-gradient(circle, rgba(15, 23, 42, 0.12) 0%, rgba(30, 41, 59, 0.06) 50%, transparent 80%); border-radius: 50%; pointer-events: none;'></span><section style='background: linear-gradient(135deg, rgba(15, 23, 42, 0.92) 0%, rgba(30, 41, 59, 0.95) 100%); border-radius: 16px; overflow: hidden; box-shadow: 0 0 40px rgba(59, 130, 246, 0.15), 0 12px 32px rgba(0, 0, 0, 0.08); position: relative; z-index: 1; backdrop-filter: blur(15px);'><section style='background: linear-gradient(90deg, rgba(30, 41, 59, 0.85) 0%, rgba(15, 23, 42, 0.9) 100%); padding: 0.8em 1.2em; display: flex; align-items: center; justify-content: space-between;'><section style='display: flex; align-items: center;'><span style='width: 0.8em; height: 0.8em; background: radial-gradient(circle, #ef4444 0%, #dc2626 100%); border-radius: 50%; margin-right: 0.8em; box-shadow: 0 0 10px rgba(239, 68, 68, 0.4);'></span><span style='width: 0.8em; height: 0.8em; background: radial-gradient(circle, #f59e0b 0%, #d97706 100%); border-radius: 50%; margin-right: 0.8em; box-shadow: 0 0 10px rgba(245, 158, 11, 0.4);'></span><span style='width: 0.8em; height: 0.8em; background: radial-gradient(circle, #10b981 0%, #059669 100%); border-radius: 50%; box-shadow: 0 0 10px rgba(16, 185, 129, 0.4);'></span></section><span style='font-size: 0.8em; color: #94a3b8; font-weight: 600; text-transform: uppercase; letter-spacing: 0.08em;'>代码</span></section><section style='padding: 1.6em; font-family: \"SF Mono\", \"Monaco\", \"Menlo\", monospace; font-size: 0.9em; line-height: 1.5; color: #e2e8f0; background: linear-gradient(135deg, rgba(15, 23, 42, 0.95) 0%, rgba(30, 41, 59, 0.92) 100%); overflow-x: auto;'><span style='font-family: inherit; background: transparent; color: inherit; font-weight: 500;'>{{code}}</span></section></section></section>",
    "list": {
      "ordered": {
        "wrapper": "<ol style='margin: 1.5em 0; padding-left: 0; list-style: none; position: relative;'>{{items}}</ol>",
        "item": "<li style='padding: 1em 0; line-height: 1.7; color: #334155; display: flex; align-items: flex-start; position: relative;'><section style='margin-right: 1.5em; margin-top: 0.15em; flex-shrink: 0; position: relative;'><span style='position: absolute; top: -8px; left: -8px; width: 2.8em; height: 2.8em; background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(147, 51, 234, 0.05) 50%, transparent 80%); border-radius: 50%; pointer-events: none;'></span><span style='width: 1.8em; height: 1.8em; background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.85em; font-weight: 700; color: white; box-shadow: 0 0 20px rgba(59, 130, 246, 0.35); position: relative; z-index: 1;'>{{index}}</span></section><span style='flex: 1; margin-top: 0.25em;'>{{content}}</span></li>"
      },
      "unordered": {
        "wrapper": "<ul style='margin: 1.5em 0; padding-left: 0; list-style: none; position: relative;'>{{items}}</ul>",
        "item": "<li style='padding: 1em 0; line-height: 1.7; color: #334155; display: flex; align-items: flex-start; position: relative;'><section style='margin-right: 1.5em; margin-top: 0.4em; flex-shrink: 0; position: relative;'><span style='position: absolute; top: -6px; left: -6px; width: 1.6em; height: 1.6em; background: radial-gradient(circle, rgba(236, 72, 153, 0.12) 0%, rgba(251, 146, 60, 0.06) 60%, transparent 90%); border-radius: 50%; pointer-events: none;'></span><span style='width: 0.7em; height: 0.7em; background: radial-gradient(circle, #ec4899 0%, #fb923c 100%); border-radius: 50%; display: inline-block; box-shadow: 0 0 12px rgba(236, 72, 153, 0.35); position: relative; z-index: 1;'></span></section><span style='flex: 1;'>{{content}}</span></li>"
      },
      "checklist": {
        "wrapper": "<ul style='margin: 1.5em 0; padding-left: 0; list-style: none; position: relative;'>{{items}}</ul>",
        "item": "<li style='padding: 1em 0; line-height: 1.7; display: flex; align-items: flex-start; color: #334155; position: relative;'><section style='margin-right: 1.2em; margin-top: 0.15em; width: 1.4em; height: 1.4em; border-radius: 8px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; background: linear-gradient(135deg, rgba(255, 255, 255, 0.85) 0%, rgba(248, 250, 252, 0.9) 100%); box-shadow: 0 0 15px rgba(168, 85, 247, 0.12), 0 3px 12px rgba(0, 0, 0, 0.04); position: relative; backdrop-filter: blur(8px);'><span style='position: absolute; top: -4px; right: -4px; width: 8px; height: 8px; background: radial-gradient(circle, rgba(251, 146, 60, 0.5) 0%, rgba(251, 191, 36, 0.3) 60%, transparent 90%); border-radius: 50%; pointer-events: none;'></span>{{checkbox}}</section><span style='flex: 1; margin-top: 0.08em;'>{{content}}</span></li>",
        "checked": "<span style='color: #059669; font-weight: 800; font-size: 0.85em;'>✓</span>",
        "unchecked": ""
      }
    },
    "raw": "{{html}}"
  }
}