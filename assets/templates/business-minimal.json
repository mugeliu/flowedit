{
  "id": "business-minimal",
  "name": "极简主义主题",
  "description": "纯粹的极简美学，去除一切多余装饰，专注于内容本身的力量",
  "category": "极简主义",
  "author": "FlowEdit Team",
  "version": "2.0.0",
  "inlineStyles": {
    "strong": "font-weight: 600; color: #000000; padding: 0.05em 0.1em;",
    "b": "font-weight: 600; color: #000000; padding: 0.05em 0.1em;",
    "em": "font-style: italic; color: #666666; padding: 0.05em 0.1em;",
    "i": "font-style: italic; color: #666666; padding: 0.05em 0.1em;",
    "u": "text-decoration: underline; text-decoration-color: #000000; text-underline-offset: 0.15em; text-decoration-thickness: 0.05em;",
    "code": "font-family: 'SF Mono', 'Monaco', 'Menlo', monospace; font-size: 0.85em; background: #f8f8f8; color: #000000; padding: 0.2em 0.4em; border-radius: 0.2em;",
    "mark": "background: #000000; color: #ffffff; padding: 0.15em 0.25em; border-radius: 0.15em;",
    "a": "color: #000000; text-decoration: underline; text-decoration-thickness: 0.05em; text-underline-offset: 0.15em; padding: 0.05em 0.1em;",
    "sup": "color: #999999; font-size: 0.7em; vertical-align: super;"
  },
  "globalStyles": {
    "container": "<section style='max-width: 100%; margin: 0 auto; padding: 2em 1em; font-size: 16px; line-height: 1.65; color: #000000; font-family: -apple-system, BlinkMacSystemFont, \"Helvetica Neue\", \"PingFang SC\", \"Hiragino Sans GB\", Arial, sans-serif; background: #ffffff;'>{{content}}</section>",
    "references": "<section style='margin-top: 2.5em; padding-top: 1.5em; border-top: 1px solid #000000; font-family: inherit;'><h4 style='margin: 0 0 0.8em 0; font-size: 0.85em; font-weight: 600; color: #000000; text-transform: uppercase; letter-spacing: 0.08em;'>参考资料</h4><section style='font-size: 0.8em; line-height: 1.5; color: #666666;'>{{links}}</section></section>"
  },
  "blocks": {
    "paragraph": "<p style='font-size: 1em; color: #000000; margin: 0 0 1.3em 0; line-height: 1.65; font-family: inherit; text-align: left; font-weight: 400;'>{{text}}</p>",
    "header": {
      "h1": "<h1 style='font-size: 1.6em; font-weight: 300; line-height: 1.2; color: #000000; font-family: inherit; margin: 1.4em 0 1em 0; letter-spacing: -0.01em;'>{{text}}</h1>",
      "h2": "<h2 style='font-size: 1.35em; font-weight: 400; line-height: 1.25; color: #000000; font-family: inherit; margin: 1.3em 0 0.7em 0; letter-spacing: -0.008em;'>{{text}}</h2>",
      "h3": "<h3 style='font-size: 1.15em; font-weight: 500; line-height: 1.3; color: #000000; font-family: inherit; margin: 1.1em 0 0.5em 0;'>{{text}}</h3>"
    },
    "quote": {
      "template": "<section style='margin: 1.2em 0; padding: 1.2em 0; border-left: 2px solid #000000; padding-left: 1em; font-family: inherit;'><p style='margin: 0 0 0.6em 0; color: #000000; font-style: italic; font-size: 1em; line-height: 1.45; font-weight: 300;'>{{text}}</p>{{?caption}}</section>",
      "optional": {
        "caption": "<p style='font-size: 0.8em; color: #666666; font-style: normal; margin: 0; font-weight: 400;'>— {{value}}</p>"
      }
    },
    "delimiter": "<section style='margin: 1.8em 0; text-align: center;'><span style='display: inline-block; width: 2em; height: 1px; background: #000000;'></span></section>",
    "image": {
      "template": "<section style='margin: 1.8em 0; text-align: center;'><img src='{{url}}' alt='{{alt}}' style='max-width: 100%; display: block; margin: 0 auto;' />{{?caption}}</section>",
      "optional": {
        "caption": "<p style='margin: 0.6em 0 0 0; font-size: 0.75em; color: #666666; font-style: italic; line-height: 1.35; text-align: center;'>{{value}}</p>"
      }
    },
    "code": "<section style='margin: 1.2em 0; background: #f8f8f8; padding: 1em; font-family: \"SF Mono\", \"Monaco\", \"Menlo\", monospace; font-size: 0.8em; line-height: 1.35; color: #000000; overflow-x: auto; border-radius: 0.25em;'><span style='font-family: inherit; background: transparent; color: inherit;'>{{code}}</span></section>",
    "list": {
      "ordered": {
        "wrapper": "<ol style='margin: 1em 0; padding-left: 1.2em; list-style: decimal; color: #000000;'>{{items}}</ol>",
        "item": "<li style='padding: 0.35em 0; line-height: 1.6; font-size: 1em; margin-bottom: 0.15em;'>{{content}}</li>"
      },
      "unordered": {
        "wrapper": "<ul style='margin: 1em 0; padding-left: 1.2em; list-style: disc; color: #000000;'>{{items}}</ul>",
        "item": "<li style='padding: 0.35em 0; line-height: 1.6; font-size: 1em; margin-bottom: 0.15em;'>{{content}}</li>"
      },
      "checklist": {
        "wrapper": "<ul style='margin: 1em 0; padding-left: 0; list-style: none;'>{{items}}</ul>",
        "item": "<li style='padding: 0.35em 0; line-height: 1.6; display: flex; align-items: flex-start; color: #000000; margin-bottom: 0.15em;'><span style='margin-right: 0.5em; margin-top: 0.05em; width: 0.8em; height: 0.8em; border: 1px solid #000000; display: flex; align-items: center; justify-content: center; flex-shrink: 0; font-size: 0.6em; border-radius: 0.1em;'>{{checkbox}}</span><span style='flex: 1;'>{{content}}</span></li>",
        "checked": "✓",
        "unchecked": ""
      }
    },
    "raw": "{{html}}"
  }
}