{
  "id": "warm-orange",
  "name": "温馨橙色主题",
  "description": "温暖橙色配色，亲和力强，适合生活分享和情感类内容",
  "category": "温馨风格",
  "author": "FlowEdit Team",
  "version": "1.0.0",
  "inlineStyles": {
    "strong": "font-weight: 700; color: rgb(194, 65, 12);",
    "b": "font-weight: 700; color: rgb(194, 65, 12);",
    "em": "font-style: italic; color: rgb(234, 88, 12); font-weight: 500; letter-spacing: 0.4px;",
    "i": "font-style: italic; color: rgb(234, 88, 12); font-weight: 500; letter-spacing: 0.4px;",
    "u": "text-decoration: underline; text-decoration-color: rgb(251, 146, 60); text-underline-offset: 3px; text-decoration-thickness: 2px;",
    "code": "font-family: 'Cascadia Code', 'Fira Code', monospace; font-size: 0.88em; background: rgba(251, 146, 60, 0.12); color: rgb(154, 52, 18); padding: 0.25em 0.55em; border-radius: 6px; border: 1px solid rgba(251, 146, 60, 0.25); font-weight: 500;",
    "mark": "background: rgba(251, 191, 36, 0.25); padding: 0.15em 0.4em; border-radius: 4px; color: rgb(146, 64, 14);",
    "a": "color: rgb(234, 88, 12); text-decoration: underline; text-decoration-color: rgba(234, 88, 12, 0.6); text-underline-offset: 2px;",
    "sup": "color: rgb(251, 146, 60); font-size: 0.7em; margin-left: 0.2em;"
  },
  "globalStyles": {
    "container": "<section style='box-sizing: border-box; margin: 0px; padding: 24px 20px; font-size: 16px; line-height: 1.65; color: rgb(69, 26, 3); font-family: \"PingFang SC\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Noto Sans CJK SC\", sans-serif; letter-spacing: 0.8px; background: linear-gradient(135deg, rgba(255, 237, 213, 0.3) 0%, rgba(254, 215, 170, 0.2) 100%); border-radius: 12px;'>{{content}}</section>",
    "references": "<section style='margin-top: 2em; padding: 20px 24px; background: rgba(251, 146, 60, 0.08); border: 1px solid rgba(251, 146, 60, 0.2); border-radius: 10px; font-family: \"PingFang SC\", -apple-system, sans-serif;'><h4 style='margin: 0 0 16px 0; font-size: 16px; font-weight: 600; color: rgb(154, 52, 18); display: flex; align-items: center;'><span style='margin-right: 8px; font-size: 18px;'>🔗</span>相关链接</h4><div style='font-size: 14px; line-height: 1.6; color: rgb(124, 45, 18);'>{{links}}</div></section>"
  },
  "blocks": {
    "paragraph": "<p style='font-size: 16px; color: rgb(92, 35, 12); letter-spacing: 0.5px; margin: 0 0 18px 0; line-height: 1.8; font-family: \"PingFang SC\", -apple-system, BlinkMacSystemFont, sans-serif; text-align: justify; font-weight: 400;'>{{text}}</p>",
    "header": {
      "h1": "<section style='text-align: center; margin: 2.5em 0 2em 0;'><h1 style='font-size: 26px; font-weight: 700; line-height: 1.3; color: rgb(255, 255, 255); font-family: \"PingFang SC\", -apple-system, sans-serif; background: linear-gradient(135deg, rgb(251, 146, 60) 0%, rgb(234, 88, 12) 100%); padding: 16px 32px; margin: 0; border-radius: 20px; box-shadow: 0 8px 24px rgba(251, 146, 60, 0.4); letter-spacing: 1px; position: relative;'>{{text}}</h1></section>",
      "h2": "<section style='margin: 2em 0 1.5em 0;'><h2 style='font-size: 20px; font-weight: 600; line-height: 1.4; color: rgb(154, 52, 18); font-family: \"PingFang SC\", -apple-system, sans-serif; background: rgba(251, 146, 60, 0.1); padding: 12px 20px; margin: 0; border-left: 5px solid rgb(251, 146, 60); border-radius: 0 12px 12px 0; letter-spacing: 0.6px; box-shadow: 0 2px 8px rgba(251, 146, 60, 0.15);'>{{text}}</h2></section>",
      "h3": "<section style='margin: 1.8em 0 1.2em 0;'><h3 style='font-size: 18px; font-weight: 600; line-height: 1.4; color: rgb(194, 65, 12); font-family: \"PingFang SC\", -apple-system, sans-serif; margin: 0; letter-spacing: 0.4px; padding: 8px 16px 8px 0; border-bottom: 2px solid rgba(251, 146, 60, 0.3); display: inline-block;'>{{text}}</h3></section>"
    },
    "quote": {
      "template": "<section style='border-left: 4px solid rgb(251, 146, 60); background: rgba(255, 237, 213, 0.4); padding: 20px 24px; border-radius: 0 12px 12px 0; box-shadow: 0 4px 12px rgba(251, 146, 60, 0.15); margin: 1.5em 0; font-family: \"PingFang SC\", -apple-system, sans-serif; position: relative;'><p style='margin: 0 0 12px 0; color: rgb(124, 45, 18); font-style: italic; font-size: 16px; line-height: 1.7; font-weight: 400;'>{{text}}</p>{{?caption}}</section>",
      "optional": {
        "caption": "<footer style='text-align: right; font-size: 14px; color: rgb(154, 52, 18); font-style: italic; margin-top: 12px; font-weight: 500;'>— {{value}}</footer>"
      }
    },
    "delimiter": "<section style='display: flex; justify-content: center; align-items: center; margin: 2.5em 0;'><span style='color: rgb(251, 146, 60); font-size: 24px; margin: 0 16px;'>🌟</span><hr style='flex: 1; height: 2px; background: linear-gradient(90deg, transparent 0%, rgba(251, 146, 60, 0.3) 50%, transparent 100%); border: none; border-radius: 1px;' /><span style='color: rgb(251, 146, 60); font-size: 24px; margin: 0 16px;'>🌟</span></section>",
    "image": {
      "template": "<figure style='margin: 1.5em 0; padding: 0; max-width: 100%; line-height: 0; display: block; text-align: center;'><img src='{{url}}' alt='{{alt}}' style='max-width: 100%; border-radius: 12px; box-shadow: 0 8px 24px rgba(251, 146, 60, 0.2);' />{{?caption}}</figure>",
      "optional": {
        "caption": "<figcaption style='margin-top: 12px; font-size: 14px; color: rgb(154, 52, 18); font-style: italic; line-height: 1.5; text-align: center;'>{{value}}</figcaption>"
      }
    },
    "code": "<section style='font-family: \"Cascadia Code\", \"Fira Code\", Monaco, monospace; font-size: 14px; line-height: 1.6; margin: 20px 0; color: rgb(124, 45, 18); background: rgba(255, 237, 213, 0.5); text-align: left; overflow-x: auto; border: 1px solid rgba(251, 146, 60, 0.3); border-radius: 10px; box-shadow: 0 2px 8px rgba(251, 146, 60, 0.1);'><pre style='padding: 20px; margin: 0; white-space: pre-wrap; overflow-wrap: break-word;'><code>{{code}}</code></pre></section>",
    "List": {
      "ordered": {
        "wrapper": "<ol style='list-style: decimal; margin: 16px 0; padding-left: 28px; color: rgb(92, 35, 12);'>{{items}}</ol>",
        "item": "<li style='padding: 8px 0; line-height: 1.7; font-size: 16px; position: relative;'>{{content}}</li>"
      },
      "unordered": {
        "wrapper": "<ul style='list-style: none; margin: 16px 0; padding-left: 20px; color: rgb(92, 35, 12);'>{{items}}</ul>",
        "item": "<li style='padding: 8px 0; line-height: 1.7; font-size: 16px; position: relative; padding-left: 20px;'><span style='position: absolute; left: 0; top: 12px; color: rgb(251, 146, 60); font-size: 12px;'>🔸</span>{{content}}</li>"
      },
      "checklist": {
        "wrapper": "<ul style='list-style: none; margin: 16px 0; padding-left: 8px;'>{{items}}</ul>",
        "item": "<li style='padding: 8px 0; line-height: 1.7; display: flex; align-items: flex-start; font-size: 16px;'><span style='margin-right: 12px; margin-top: 2px; font-size: 18px;'>{{checkbox}}</span><span style='color: rgb(92, 35, 12);'>{{content}}</span></li>",
        "checked": "🧡",
        "unchecked": "🤍"
      }
    },
    "raw": "{{html}}"
  }
}